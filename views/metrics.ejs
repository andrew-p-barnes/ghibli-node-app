<% extend('layout') %>

      <h5>Number of films watched</h5>
      <div id="watchedPiechart" class="chart" style="width: 700px; height: 333px;"></div>

      <!-- <h5>Top 5 most watched films</h5>
      <div id="mostWatchedTable" class="chart"></div> -->

      <h5>Top 5 most watched films</h5>
                <table class="table table-hover chart">
                  <thead class="table-dark">
                    <tr>
                      <th scope="col">Title</th>
                      <th scope="col">Views</th>
                    </tr>
                  </thead>
                  <tbody id="mostWatchedTable">
                  </tbody>
                </table>

      <!-- <h5>5 most recent user comments</h5>
      <div id="latestCommentsTable" class="chart"></div> -->
      
      <h5>5 most recent user comments</h5>
                <table class="table table-hover chart">
                  <thead class="table-dark">
                    <tr>
                      <th scope="col" class="auto">Title</th>
                      <th scope="col" class="auto">Name</th>
                      <th scope="col" class="w-50">Comment</th>
                      <th scope="col" class="auto">Date</th>
                    </tr>
                  </thead>
                  <tbody id="latestCommentsTable">
                  </tbody>
                </table>

