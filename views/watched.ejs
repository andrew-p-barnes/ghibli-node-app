<% extend('layout') %>

      <div class="container">
        <% if (watched.length > 0) { %>
          <% for(var i=0; i < watched.length; i++) { %>
            <div class="card" data-id= <%= watched[i].id %>> 
              <div class="card-body">
                <img src= <%= watched[i].imgSrc %> class="film-img">
                <p>Release date: <%= watched[i].releaseDate %></p>
                <div class="scores">
                  <p>RT score: <%=watched[i].rtScore %>  <img src= <%= watched[i].rtImgSrc %> width='20'></p>
                  <% if (watched[i].avgUserScore != null) { %>
                  <p>Avg user score: <%=watched[i].avgUserScore %></p>
                  <% } %>
                </div>
                <div class="footer">
                  <% if (watched[i].userScore == null) { %>
                  <p class="userScore"></p>
                  <button type="button" class="btn btn-outline-info rate-btn" data-toggle="modal" data-target="#rateModal">Rate film</button>
                  <button type="button" class="btn btn-secondary more-info-btn" data-toggle="modal" data-target="#moreInfoModal">More...</button>
                  <% } else { %>
                  <p>My score: <%= watched[i].userScore %></p>
                  <button type="button" class="btn btn-secondary more-info-btn" data-toggle="modal" data-target="#moreInfoModal">More...</button>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>
        <% } %>
      </div>

      <!-- Rate Modal -->
      <div class="modal fade" id="rateModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="rateModalLabel">Rate film</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form>
                <div class="form-group">
                  <label for="formControlRange">Use the slider below to select a score</label>
                  <input type="range" class="form-control-range" id="formControlRange">
                  <p>Rating: <span id="rangeValue"></span></p>
                  <label for="commentInput" class="form-label">Please provide a comment</label>
                  <textarea id="commentInput" name="comment" class="form-control" aria-describedby="commentHelpBlock"></textarea>
                  <div id="commentHelpBlock" class="form-text form-control-sm">
                    Your comment must be 20-200 characters long.
                  </div>
                  <div id="counterFooter">
                    <p id="counter" class="charLengthWarning form-control-sm">0/200</p>
                  </div>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary rateModal-close-btn" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-info rateModal-rate-btn" data-dismiss="modal">Rate</button>
            </div>
          </div>
        </div>
      </div>
      <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
      <script src="/javascripts/watchedScript.js"></script>

      